{
  "extends": "../tsconfig",
  "compilerOptions": {
    "target": "esnext",
    "outDir": "./dist",
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "plicit/*": ["../plicit"],
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/*.ts",
    "src/**/*.tsx",
    "src/svg.d.ts",
    "./tailwind.config.js",
    "./tailwind.config.ts"
  ],
  "exclude": [
    "./dist",
    "./node_modules",
    "../plicit/src"
  ],
  "references": [{ "path": "../plicit" }]
}
